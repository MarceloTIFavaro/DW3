{% extends "templates/base.html" %}

{% block content %}

  <div class="container">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item"><a href="/cursos/ManutCursos">Manutenção de cursos</a></li>
      <li class="breadcrumb-item active">{{ title }}</li>
    </ol>

    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            {{ title }}
          </div>
          <div class="card-body">

            <form id="formCurso" method="post" action="/cursos/UpdateCursos">
              <input type="hidden" name="cursoid" value="{{ data.cursoid }}" />

              <div class="form-group mb-3">
                <label for="codigo">Código</label>
                <input type="text" class="form-control" id="codigo" name="codigo" value="{{ data.codigo }}" {% if disabled %}disabled{% endif %} required>
              </div>

              <div class="form-group mb-3">
                <label for="descricao">Descrição</label>
                <input type="text" class="form-control" id="descricao" name="descricao" value="{{ data.descricao }}" {% if disabled %}disabled{% endif %} required>
              </div>

              <div class="form-group mb-3">
                <label for="ativo">Ativo</label>
                <select class="form-select" id="ativo" name="ativo" {% if disabled %}disabled{% endif %} required>
                  <option value="true" {% if data.ativo %}selected{% endif %}>Sim</option>
                  <option value="false" {% if not data.ativo %}selected{% endif %}>Não</option>
                </select>
              </div>

              {% if not disabled %}
              <button type="submit" class="btn btn-primary mt-2">Salvar</button>
              {% endif %}
              <a href="/cursos/ManutCursos" class="btn btn-secondary mt-2">Voltar</a>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function() {
      windowOnLoad();
    };
  </script>

{% endblock %}

